/* pages/detail/detail.wxss */
@import"../../wxParse/wxParse.wxss";
.pubTitle{
  font-size:32rpx;
font-weight:500;
color:rgba(34,34,34,1);
line-height:40rpx;
}

.pubTitle view{
  display: inline-block;
  width:10rpx;
height:40rpx;
background:rgba(240,155,55,1);
margin-right: 14rpx;
vertical-align: top;
}

.detailShopping{
  margin-top: 40rpx;
  display: flex;
}

.detailShopping .pubTitle{
margin-bottom: 29rpx;
flex: 1;
}

.comment{
  font-size:21rpx;
font-weight:400;
color:rgba(102,102,102,1);
line-height:29rpx;
}
.comment image{
  width: 20rpx;
  height: 20rpx;
  vertical-align: middle;
  margin-left: 16rpx;
}
.dScroll{
  width:100%;display:flex;white-space: nowrap;
  margin-bottom: 10rpx;
}

.share-btn {
  width: 31rpx;
  height: 31rpx;
  background-image: url('data:image/png;base64,');
  background-size: cover;
  background-color: transparent;
  padding: 0;
  border-radius: 0;
  position: absolute;
  right: 30rpx;
  top: 30rpx;
  z-index: 996
}

.dScroll .listItem{
 float: none;
 width: 290rpx;
 display: inline-block;
}

.dScroll .listItem:last-child{
  margin-right: 0;
}

.dScroll .listItem .bgImg{
  height:285rpx;
}

.dDetail image{
  width: auto;
  height: auto;
  display: block;
}
.dFooterWrapper{
  padding-bottom: 88rpx;
}
.dFooter{
height:88rpx;
background:rgba(255,255,255,1);
position: fixed;
bottom: 0;
left: 0;
width: 100%;
display: flex;
align-items: center;
text-align: center;
}
.fCar{
border-right:1px solid rgba(229,229,229,1);
}
.fCar,.fLove{
width: 115rpx;
height: 88rpx;
box-sizing: border-box;
display: flex;
flex-direction: column;
align-items: center;
color: #666666;
font-size: 10px;
text-align: center;
line-height: 34rpx;
}
.fCar image{
width: 35rpx;
height: 33rpx;
margin-top: 16rpx;
}
.fLove image{
  width: 35rpx; 
  height: 33rpx;
  margin-top: 16rpx;
}
.fJoin{
  width: 260rpx;
  height: 88rpx;
  background:rgba(240,155,55,1);
  color: #fff;
  font-size:28rpx;
 font-weight:400;
 line-height: 88rpx;
}
.fBuy {
  width: 260rpx;
  height: 88rpx;
  background:#FA4B36;
  color: #fff;
  font-size:28rpx;
 font-weight:400;
 line-height: 88rpx;
}

.discount-box {
  border-top: 2rpx solid #F6F6F6;
  height: 90rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center
}

.discount-box .discount-title {
  color: #222222;
  font-size: 16px;
  margin-right: 33rpx;
}

.discount-box .discount-content {
  flex: 1;
  display: flex;
  justify-content: space-between;
}

.discount-box .discount-content .discount-text {
  color: #666666;
  font-size: 12px;
}

.discount-box .discount-content .discount-lq {
  color: #F09B37;
  font-size: 12px;
}

.discount-box .discount-content .discount-lq image {
  width: 20rpx;
  height: 20rpx;
  margin-left: 16rpx;
}

.activity {
  border-top: 2rpx solid #F6F6F6;
  padding-left: 30rpx;
  display: flex;
  align-items: center
}

.activity .activity-title {
  color: #222222;
  font-size: 16px;
  margin-right: 33rpx;
}

.activity .activity-content {
  flex: 1;

}

.activity .activity-content .activity-item {
  display: flex;
  height: 100rpx;
  align-items: center;
  flex-direction: row-reverse;
  padding-right: 30rpx;
}

.activity .arrow {
  width: 20rpx;
  height: 20rpx;
}

.activity .activity-content .activity-item .ac-item-left {
  flex: 1;
  color: #666666;
  font-size: 12px;
  overflow: visible
}

.activity .activity-content .activity-item .ac-item-left text {
  color: #F09B37;
  border:2rpx solid rgba(240,155,55,1);
  border-radius:10rpx;
  padding: 4rpx 6rpx;
}

.store-content {
  margin-left: 25rpx;
  overflow: hidden;
  display: flex;

}

.store-content .store-logo {
  width: 100rpx;
  height: 100rpx;
  margin-right: 30rpx;
  border-radius: 50%;
}

.store-content .store-text {
  flex: 1;
  position: relative;
  color: #333333;
  overflow: hidden
}

.store-content .store-text .store-name {
  font-size: 32rpx;
}

.store-content .store-text .store-address {
  font-size: 24rpx;
  margin-top: 12rpx;
}

.store-content .store-text .store-arrow {
  width: 20rpx;
  height: 20rpx;
  position: absolute;
  top: 50%;
  right: 0;
  transform: translateY(-50%)
}