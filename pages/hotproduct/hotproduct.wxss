/* pages/hotproduct/hotproduct.wxss */
.typeWrapper{
  height:115rpx;
}
.hotProType{
  white-space: nowrap;
  border:1px solid rgba(235,235,235,1);
  position: fixed;
  /* top: 66px; */
  top: 0;
  left: 0;
  background: #fff;
  z-index: 10;
}
.hotProType .scroll-view-item{
  display: inline-block;
  margin-left: 30rpx;
  font-size:28rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
  line-height:75rpx;
}
.hotProType .scroll-view-item:last-child{
  margin-right: 30rpx;
}

.hotProType .active{
  font-size:36rpx;
  font-weight:500;
  color:rgba(34,34,34,1);
}
