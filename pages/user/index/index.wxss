.user {
  position: relative;
  height: 430rpx;
}

.user-bg {
  width: 750rpx;
  height: 445rpx;
  position: absolute;
  left: 0;
  top: -110rpx;
}

.user-card {
  background-color: #fff;
  width: 690rpx;
  /* height: 300rpx; */
  box-shadow:0rpx 0rpx 43rpx 0rpx rgba(144,144,144,0.32);
  border-radius:10rpx;
  padding-top: 83rpx;
  box-sizing: border-box;
  text-align: center;
  position: absolute;
  left: 30rpx;
  top: 130rpx;
}

.header {
  margin: 0;
  padding: 0;
  width: 136rpx;
  height: 136rpx;
  border: 6rpx solid #fff;
  border-radius: 50%;
  position: absolute;
  left: 50%;
  top: 0;
  transform: translate(-50%, -50%);
  z-index: 998;
}

.header image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.user-name {
  font-size: 14px;
  color: #222222;
  font-weight: bold
}

.user-member {
  color: #666666;
  font-size: 12px;
  margin-top: 15rpx;
}

.user-balance {
  height: 150rpx;
  color: #999999;
  font-size: 10px;
  display: flex;
  align-items: center;
  /* justify-content: space-between; */
  justify-content: center;
  text-align: center;

}

.banlance {
  width: 49%;
}

.integral {
  width: 49%;
}

.dividing-line {
  width:1px;
  height:66rpx;
  background:rgba(102,102,102,1);
}

.user-balance .score {
  color: #222222;
  font-size: 20px;
}

.user-message {
  height: 51rpx;
  position: absolute;
  right: 0;
  top: 58rpx;
  background:rgba(240,155,55,1);
  border-radius: 10rpx 0 0 10rpx;
  display: flex;
  align-items: center;
}

.message-icon {
  width: 23rpx;
  height: 23rpx;
  margin-left: 15rpx;
}

.message-text {
  margin: 0 9rpx 0 13rpx;
  color: #fff;
  font-size: 12px;
  font-weight: 400
}

.order {
  width:690rpx;
  height:240rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 0px 21px 0px rgba(0, 0, 0, 0.15);
  border-radius:10rpx;
  margin: 62rpx auto 24rpx;
}

.order-header {
  display: flex;
  margin: 0 35rpx 0 25rpx;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;

} 

.order-title {
  color: #282828;
  font-size: 14px;
  font-weight: bold;
}

.order-all {
  color: #999999;
  font-size: 12px;
}

.order-line {
  width: 630rpx;
  height: 1px;
  background-color: #000;
  opacity: 0.3;
  margin: 0 auto;
}

.order-fourPart {
  height: 160rpx;
  display: flex;
  justify-content: space-between;
}

.order-item {
  width: 25%;
  height: 95rpx;
  color: #222222;
  font-size: 12px;
  text-align: center;
  margin-top: 38rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between
}

.order-item image {
  margin: 0 auto
}

.pay-icon {
  width: 49rpx;
  height: 49rpx;
}

.fh-icon {
  width: 55rpx;
  height: 45rpx;
}

.sh-icon {
  width: 56rpx;
