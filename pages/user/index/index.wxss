}

.other-warper {
  width:690rpx;
  margin: 0 auto 20rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 0px 21px 0px rgba(0, 0, 0, 0.15);
  border-radius:10rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  padding-bottom: 20rpx;
  box-sizing: border-box
}

