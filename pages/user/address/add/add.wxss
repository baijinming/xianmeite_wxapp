.container {
  background-color: #F0F0F0;
  min-height: 100vh;
  width: 100%;
}

.form {
  background-color: #fff;
  border-top: 1rpx solid #DDDDDD;
  padding: 10rpx 0 10rpx 32rpx;
  color: #253040;
  font-size: 14px;
}

.form-item {
  height: 86rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #F0F0F0
}

.form-item input {
  width: 570rpx;
}

.area-picker {
  margin-right: 28rpx;
  color: #B3B3B3;
  font-size: 14px;
}

textarea {
  margin: 20rpx 0;
  font-size: 14px;
  height: 100rpx;
}

.mr-waper {
  height: 86rpx;
  background-color: #fff;
  padding: 0 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
  color: #253040;
  font-size: 14px;
}

.btn {
  background-color: #F09B37;
  height: 88rpx;
  color: #fff;
  font-size: 16px;
  line-height: 88rpx;
  border-radius: 0;
  text-align: center;
  position: fixed;
  left: 0;
  bottom: 0;
  right: 0
}

.btn::after {
  border: 0
}

.picker-mask {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  top: 0;
  opacity: .6;
  z-index: 99;
  background-color: #999
}

.dq-picker {
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 996;
  height: 800rpx;
  width: 750rpx;
  background-color: #fff;
  text-align: center;
  color: #222;  
}

.dq-picker .fork {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 20rpx;
  right: 20rpx;
}

.dq-picker .title {
  line-height: 80rpx;
  font-size: 16px;
}

.dq-picker .dq-value {
  display: flex;
  line-height: 60rpx;
  margin-top: 20rpx;
}

.dq-picker .dq-value view {
  width: 200rpx;
}

.dq-picker .dq-value .xz-title {
  border-bottom: 4rpx solid #F09B37
}

.dq-picker .select-box {
  height: 600rpx;
  margin-top: 20rpx;
  
}

.dq-picker .select-box view {
  height: 60rpx;
  line-height: 60rpx;
}