/* pages/shopcar/shopcar.wxss */
.shopcarWrapper{
  background:rgba(246,246,246,1);
  padding: 40rpx 30rpx 46rpx;
}

.delPro{
  text-align: right;
  font-size:28rpx;
font-weight:400;
color:rgba(102,102,102,1);
line-height:34rpx;
margin-bottom: 40rpx;
}

.carList{
  background: #fff;
}

.carItem{
  padding: 30rpx 20rpx 30rpx 28rpx ;
  display: flex;
  align-items: center;
}

.storeItem {
  border-radius: 10rpx;
  margin-top: 30rpx;
}

.store-title {
  align-items: center;
  border-bottom: 1rpx solid #F6F6F6;
  height: 90rpx;
  padding: 0;
  margin: 0 30rpx;
}

.store-text {
  line-height: 90rpx;
}

.store_icon {
  width: 30rpx;
  height: 30rpx;
  margin: 0 10rpx 0 35rpx;
}

.carItem .bgImg{
  width: 160rpx;
  height: 160rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}
.carItem .pubTitle{
  margin-bottom: 50rpx;
  width: 400rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.carItem .con{
  flex: 1;
}
.calc{
  text-decoration: inherit;
  line-height: 44rpx;
  float: right;
  border:2rpx solid rgba(223,223,223,1);
  border-radius:10rpx;
  overflow: hidden;
}

.calc view{
  width:44rpx;
  height:44rpx;
  text-align: center;
  text-decoration: none;
}

.calc .reduce {
  border-right: 2rpx solid rgba(221,221,221,1);
  font-size: 28rpx;
}

.calc .plus {
  border-left: 2rpx solid rgba(221,221,221,1);
  font-size: 28rpx;
}

.calc text{
  width: 70rpx;
  display: inline-block;
  text-align: center;
}
.botWrapper{
  height: 86rpx;
  width: 100%;
  display: block;
  line-height: 86rpx;
}
.botBtns{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #fff;
  display: flex;
  align-items: center;
  padding-left: 60rpx;
  box-sizing: border-box;
}
.total{
  flex: 1;
  text-align: right;
}
.total text{
  color: rgba(240,155,55,1);
}
.botBtns .checkbox image{
vertical-align: middle;
}
button{
  background:rgba(240,155,55,1);
  height: 86rpx;
  width: 190rpx;
  color: #fff;
  border-radius: 0;
  border: none;
  font-size:28rpx;
font-weight:400;
line-height:86rpx;
margin-left: 32rpx;
}
.empty{
  text-align: center;
  line-height: 1;
  padding-top: 130rpx;
}
.empty image{
  width: 164rpx;
  height: 164rpx;
  margin-bottom: 28rpx;
}

.empty view{
  font-size:24rpx;
font-weight:500;
color:rgba(154,154,154,1);
line-height:30rpx;
margin-bottom: 100rpx;
}

.empty button{
  margin: auto;
  margin-left: 222rpx;
  width: 240rpx;
  height:76rpx;
background:rgba(240,155,55,1);
border-radius:6rpx;
line-height: 76rpx;
border: none;
margin-bottom: 240rpx;
}