.homeSearch{
  height:190rpx;
  background:rgba(240,155,55,1);
  padding-top: 46rpx;
}

.homeSearch .container{
  position: relative;
  display: flex;
  align-items: center;
}

.index-logo {
  width: 70rpx;
  height: 70rpx;
  margin-right: 20rpx;
  border-radius: 50%
}

.homeSearch .position{
  margin-right: 20rpx;
}

.homeSearch input{
  height:60rpx;
  background:rgba(255,255,255,1);
  border-radius:30rpx;
  padding-left: 80rpx;
  font-size: 24rpx;
}

.homeSearch .searchCon,.homeSearch navigator{
  flex: 1;
}

.searchCon{
  position: relative;
}

.searchCon image{
  position: absolute;
  top: 16rpx;
  width: 34rpx;
  height: 28rpx;
  left: 33rpx;
}

.homeBanner{
  width:690rpx;
  height:280rpx;
  border-radius:10rpx;
  background-size: cover;
  background-position: center;
  margin: auto;
  margin-top: -80rpx;
  overflow:hidden;
  position: relative;
  z-index: 1;
}
.bannerBgImg{
  display: block;
  width: 100%;
  height: 100%;
   background-size: cover;
  background-position: center;
  background-color: rgba(0,0,0,0.1)
}
.typeList{
  margin-top: 50rpx;
  line-height: 1;
}
.typeItem{
  text-align: center;
  width: 20%;
  float: left;
  margin-bottom: 37rpx;
  font-size: 24rpx;
}
.typeItem image{
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
  border-radius: 50%;
}

.midItem{
  float: left;
  position: relative;
}

.midItem .bgImg{
  background-size: cover;
  background-position: center;
  display: block;
  width: 100%;
  height: 100%;
}

.midItem1{
  width:300rpx;
height:390rpx;
background-color:rgba(246,246,246,1);
margin-right: 10rpx;
}
.midItem2{
  margin-bottom: 10rpx;
}

.midItem2,.midItem3{
  width:380rpx;
  height:191rpx;
  background-color:rgba(246,246,246,1);
}
.midText{
  position: absolute;
  top: 17rpx;
  left: 17rpx;
}
.midText view{
  font-size:28rpx;
font-weight:500;
color:#222222;
line-height:30rpx;
}
.midText text{
  font-size:24rpx;
font-weight:400;
color:rgba(102,102,102,1);
line-height:30rpx;
}

.homeBanner swiper-item{
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
}

.fruit {
  width: 750rpx;
  margin: 30rpx auto 40rpx;
  overflow: hidden
}

.fruit .fruit-banner {
  width: 720rpx;
  height: 320rpx;
  display: block;
  margin: 0 auto
}

.fruit .shop-box {
  width: 690rpx;
  margin: 20rpx 10rpx 0 30rpx;
  display: flex;

}

.shop-item {
  width: 210rpx;
  overflow: hidden;
  margin: 0 10rpx;
}

.shop-item .shop-originalImg {
  width: 210rpx;
  height: 210rpx;
}

.shop-item .shop-goodsName {
  color: #333333;
  font-size: 14px;
  width: 210rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  line-height: 66rpx;
}

.shop-item .shop-price {
  color: #E73A38;
  font-size: 16px;
}

.shop-item .shop-price .shop-marketPrice {
  color: #999999;
  font-size: 14px;
  text-decoration: line-through;  
}