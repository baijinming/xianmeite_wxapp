/* pages/confirmOrder/confirm.wxss */
.pageWrapper{
  min-height: 100vh;
  background:rgba(246,246,246,1);
  padding: 30rpx;
}
.address{
  display: flex;
  align-content: center;
  align-items: center;
  height:166rpx;
  background:rgba(255,255,255,1);
  border-radius:10rpx;
  padding: 5rpx 30rpx;
}
.addrPos{
  width: 50rpx;
  height: 50rpx;
  display: block;
  margin-right: 30rpx;
}

.arrow{
  width: 30rpx;
  height: 30rpx;
  margin-left: 20rpx;
}

.addrWrapper{
  font-size:28rpx;
  font-weight:400;
  color:rgba(37,48,64,1);
  flex: 1;
}

.addrWrapper text{
  font-size:24rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
  padding-left: 10rpx;
}

.addrDetail{
  font-size:26rpx;
  font-weight:400;
  color:rgba(102,102,102,1);
  line-height:36rpx;
  margin-top: 10rpx;
}

.chooseType{
  font-size:28rpx;
  font-weight:400;
  color:rgba(37,48,64,1);
  line-height:33rpx;
  display: flex;
  align-content: center;
  align-items: center;
  background:rgba(255,255,255,1);
  border-radius:10px;
  margin-top: 30rpx;
  padding: 35rpx 30rpx;
}

.chooseType .text{
  flex: 1;
}

.payType{
  font-size:26rpx;
font-weight:400;
color:rgba(102,102,102,1);
line-height:36rpx;
}

.payType view{
  display: inline-block;
  margin-right: 45rpx;
}

.payType view:last-child{
  margin-right: 0;
}

.radio{
  width: 36rpx;
  height: 36rpx;
  vertical-align: top;
  /* margin-top: 2rpx; */
  margin-right: 6rpx;
}

.conGoods{
  background:rgba(255,255,255,1);
border-radius:10rpx;
padding: 0 30rpx 30rpx 28rpx;
margin-top: 30rpx;
}

.conGoodsList{
  display: flex;
  align-items: center;
  border-bottom: 1px solid rgba(246,246,246,1);
  padding-bottom: 30rpx;
  padding-top: 30rpx;
}
.conGoodsList .bgImg{
  width:150rpx;
height:150rpx;
background-color:rgba(246,246,246,1);
background-size: contain;
background-position: center;
background-repeat: no-repeat;
margin-right: 40rpx;
}

.conGoodsList .con{
  font-size:24rpx;
font-weight:400;
color:rgba(34,34,34,1);
line-height:32rpx;
}
.conGoodsList .con view{
  margin-bottom: 12rpx;
}
.gTitle{
font-size:28rpx;
}

.calcView{
  display: flex;
  align-items: center;
  font-size:28rpx;
font-weight:400;
color:rgba(34,34,34,1);
line-height:32rpx;
margin-bottom: 20rpx;
}

.calcView:last-child{
  margin-bottom: 0;
}

.calcView text{
  flex: 1;
}

.calcView view{
  font-size:26rpx;
font-weight:500;
color:rgba(250,75,54,1);
}

.calcViewWrapper{
  padding-top: 30rpx;
}

.calcView .text-success{
  color:rgba(4,172,87,1);
}
.pageWrapper{
  padding-bottom: 98rpx;
  box-sizing: border-box;
}
.confirmBtn{
  position: fixed;
  bottom: 0;
  left: 0;
  height:98rpx;
  background:rgba(255,255,255,1);
  width: 100%;
  display: flex;
  align-items: center;
}

.confirmBtn text{
  font-size:24rpx;
font-weight:500;
color:rgba(153,153,153,1);
line-height:44rpx;
padding-right: 20rpx;
}

.confirmBtn view{
  font-size:30rpx;
font-weight:500;
color:rgba(34,34,34,1);
}

.confirmBtn .text-danger{
  color:rgba(250,75,54,1);
  display: inline-block;
}

.confirmBtn>view{
  flex: 1;
  display: flex;
  padding-left: 60rpx;
}

.confirmBtn button{
  width:292rpx;
height:98rpx;
background:rgba(240,155,55,1);
color: #fff;
line-height: 98rpx;
border-radius: 0;
}

.mask {
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  z-index: 666;
  background-color: #000;
  opacity: .5;
}

.recharge-popup {
  position: fixed;
  top: 400rpx;
  left: 50%;
  z-index: 996;
  transform: translateX(-50%);
  width: 560rpx;
  background-color: #fff;
  border-radius: 10rpx;
  overflow: hidden
}

.recharge-popup .close {
  width: 23rpx;
  height: 23rpx;
  position: absolute;
  top: 21rpx;
  right: 23rpx;
}

.recharge-popup .money-icon {
  width: 164rpx;
  height: 164rpx;
  margin: 48rpx auto 24rpx;
  display: block;
}

.recharge-popup .popup-text1 {
  color: #333333;
  font-size: 26rpx;
  text-align: center;
}

.recharge-popup .popup-text2 {
  color: #999999;
  font-size: 22rpx;
  text-align: center;
  margin: 22rpx 0 28rpx;
}

.recharge-popup .recharge-btn {
  width: 240rpx;
  height: 76rpx;
  margin: 0 auto 54rpx;
  background-color: #F09B37;
  border-radius: 38rpx;
  line-height: 76rpx;
  color: #fff;
  text-align: center;
  font-size: 28rpx;
}

.coupon-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 996;
  overflow: hidden;
  background-color: #fff;
  padding-bottom: 100rpx;
}

.coupon-title {
  color: #333333;
  font-size: 30rpx;
  text-align: center;
  margin: 45rpx 0 40rpx;
}

.coupon {
  width: 620rpx;
  height: 120rpx;
  margin: 40rpx auto;
  background-image: url('https://dstest.pxuc.com.cn/Public/imgs/coupon_bg.png');
  background-size: 100% 100%;
  display: flex;
  align-items: center;
  text-align: center;
}

.text1 {
  width: 170rpx;
  color: #D20A0A;
  font-size: 34rpx;
}

.text1 text {
  font-size: 60rpx;
}

.text2 {
  width: 200rpx;
  margin-right: 60rpx;
}

.title1 {
  color: #680202;
  font-size: 30rpx;
}

.title2 {
  color: #680202;
  font-size: 24rpx;
}

.text3 {
  color: #fff;
  font-size: 28rpx;
  flex: 1
}

.no-couponText {
  color: #333333;
  font-size: 26rpx;
  margin: 50rpx;
  text-align: center
}

.ac-container {
  margin: 30rpx 0;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
  box-sizing: border-box;
  color: #222222;
  font-size: 14px;
}

.ac-container text {
  color: #FA4B36;
}