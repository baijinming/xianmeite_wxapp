/* pages/comment/comment.wxss */
.commentItem{
padding: 30rpx;
font-size:24rpx;
font-weight:400;
color:rgba(34,34,34,1);
line-height:30rpx;
}

.commentHead{
  display: flex;
  align-content: center;
  margin-bottom: 50rpx;
}
.commentHead image{
  width: 24rpx;
  height: 24rpx;
  vertical-align: top;
  margin-top: 2rpx;
  margin-right: 10rpx;
}
.commentHead .date{
  flex: 1;
  text-align: right;
}

.commentText{
  margin-bottom: 20rpx;
}
.commentImg view{
  width:134rpx;
height:134rpx;
background:rgba(242,242,242,1);
float: left;
margin-right: 20rpx;
margin-bottom: 10rpx;
}
.commentImg image{
  width: 100%;
  height: 100%;
}

.no-comment {
  width: 100%;
  text-align: center;
  margin-top: 200rpx;
}