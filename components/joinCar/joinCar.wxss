/* components/joinCar/joinCar.wxss */
.modal {
   background-color: rgba(0, 0, 0, 0.4);
   position: fixed;
   flex-direction: column;
   top: 0;
   left: 0;
   bottom: 0;
   right: 0;
   display: flex;
   justify-content: center;
   align-items: center;
   z-index: 9998;
}

.container {
    position: absolute;
    display: flex;
    flex-direction: column;
    width: 100%;
    background-color: white;
    bottom: 0;
    min-height: 500rpx;
}

.title {
    font-size: 34rpx;
    color: black;
    text-align: center;
    margin-top: 30rpx;
}

.content {
  margin-top:30rpx;
  font-size: 30rpx;
  color: #888888;
  padding-bottom: 88rpx;
}

.mWrapper{
  padding-left: 30rpx;
  padding-right: 30rpx; 
  padding-bottom: 30rpx;
  border-bottom: 1px solid rgba(246,246,246,1);
  margin-bottom: 30rpx;
}

.modal-btn-wrapper {
    position: absolute;
    bottom: 0;
    left: 0;
    display: flex;
    flex-direction: row;
    border-top: 1rpx solid rgba(7,17,27,0.1);
    width: 100%;
}
 
.cancel-btn, .confirm-btn {
 height:88rpx;
 line-height: 88rpx;
background:rgba(240,155,55,1);
 text-align: center;
 font-size: 32rpx;
 width: 100%;
 color: #fff;
}
 
.cancel-btn {
 border-right: 1rpx solid rgba(7,17,27,0.1);
}

.mTop{
  display: flex;
}

.mTop .bgImg{
  width:150rpx;
  height:150rpx;
  background:rgba(246,246,246,1);
  margin-right: 40rpx;
}

.mTop .close{
  width: 24rpx;
  height: 24rpx;
  opacity: 0.6;
  margin-top: 20rpx;
}

.mTop>view{
  flex: 1;
  padding-top: 18rpx;
  line-height: 1;
}

.mTitle{
  font-size:28rpx;
  font-weight:400;
  color:rgba(34,34,34,1);
  margin-bottom: 24rpx;
}

.mPrice{
  font-size:26rpx;
  font-weight:500;
  color:rgba(250,75,54,1);
  margin-bottom: 24rpx;
}

.unit{

}
.mUnit{
  font-size:24rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
  margin-bottom: 14rpx;
}

.mHead{
  font-size:24rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
  line-height:32rpx;
}

.unList view{
  font-size:24rpx;
  font-weight:400;
  color:rgba(102,102,102,1);
  line-height:50rpx;
  height:50rpx;
  border:1px solid rgba(241,241,241,1);
  border-radius:4px;
  min-width:142rpx;
  display: inline-block;
  text-align: center;
  margin-right: 40rpx;
  margin-top: 24rpx;
}

.unList .active{
  border:1px solid rgba(240,155,55,1);
  color: rgba(240,155,55,1);
}

.calcWrapper{
  display: flex;
  margin-bottom: 0;
  padding-top: 10px;
  padding-bottom: 50rpx;
}

.calcWrapper .mHead{
  flex: 1;
  line-height: 60rpx;
}

.calc{
  height: 60rpx;
  line-height: 60rpx;
  background:rgba(249,249,249,1);
  border-radius:20rpx;
  width: 120rpx;
  text-align: center;
  position: relative;
  padding: 0 41rpx;
  font-size: 24rpx;
}

.calc view{
  display: inline-block;
}

.reduce,.add{
  width:60rpx;
  height:60rpx;
  background: #fff;
  text-align: center;
  border-radius: 20rpx;
  position: absolute;
  left: 1px;
  top: 0;
  border: 1px solid rgba(249,249,249,1);
}

.add{
  right: 1px;
  left: auto;
}

.speclist{
  display: flex;

}

.speclist .specName{
  font-size:24rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
  line-height:32rpx;
  margin-top: 37rpx;
  margin-right: 20rpx;
}

.speclist .unList{
  flex: 1;
}