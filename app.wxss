
/**app.wxss**/
button::after {
  border: 0
}

page{
  font-size:28rpx;
font-weight:400;
color:rgba(34,34,34,1);
}
.container {
  width: 690rpx;
  box-sizing: border-box;
  display: block;
  margin: auto;
}

.clearfix::after{display: block;height: 0;clear: both;content: ''}

.dDetail {
  margin-left: 10rpx;
  margin-bottom: 20rpx;
}

.wxSearch{
  display: flex;
  align-items: center;
  margin: 20rpx 0;
  position: relative;
}
.wxSearch .text{
  margin-left: 25rpx;
}
.wxSearch .icon{
  width: 34rpx;
  height: 28rpx;
  position: absolute;
  left: 30rpx;
  top: 24rpx;
  z-index: 1;
}
.searchInput{
  height:60rpx;
  line-height: 60rpx;
  background:rgba(237,237,237,1);
  border:2px solid rgba(237,237,237,1);
  border-radius:10rpx;
  padding: 0 30rpx 0 80rpx;
  flex: 1;
  font-size:26rpx;
font-weight:400;
color:rgba(153,153,153,1);
}


.bgImg{
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  background-color:rgba(242,242,242,1);
}

.proList{
  padding-left: 30rpx;
}
.listItem{
  width: 335rpx;
  float: left;
  background:rgba(250,250,250,1);
  margin-bottom: 30rpx;
  margin-right: 20rpx;
  position: relative;
}
.listItem .bgImg,.pubBgImg{
  height: 330rpx;
  margin-bottom: 20rpx;
  background-size: contain;
}
.listItem .con{
  padding: 0 10rpx;
  position: relative;
  padding-bottom: 32rpx;
  /* padding-right: 70rpx; */
}
.listItem .title,.pubTitle{
  font-size:28rpx;
  font-weight:400;
  color:rgba(34,34,34,1);
  line-height:34rpx;
  margin-bottom: 20rpx;
    /*height: 68rpx;*/
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.listItem .desc,.pubDesc{
  font-size:24rpx;
font-weight:400;
color:rgba(102,102,102,1);
line-height:34rpx;
margin-bottom: 25rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    padding-right: 70rpx;
}

.listItem .price{
  padding-right: 90rpx
}
.listItem .price,.pubPrice{
  font-size:32rpx;
  font-weight:500;
  color:rgba(231,58,56,1);
  line-height:34rpx;
  white-space: nowrap;
}

.listItem .price view,.pubPrice view{
  text-decoration:line-through;
  color: #999999;
  display: inline-block;
  font-size: 26rpx;
}

.shopCar,.pubShopCar{
  width: 70rpx;
  height: 70rpx;
}

.carWrapper{
  display: inline-block;
  position: absolute;
  bottom: 30rpx;
  right: 15rpx;
}

.dSwiper{
  position: relative;
  margin-bottom: 35rpx;
}
.dSwiper swiper{
  height: 540rpx;
  background:rgba(238,238,238,1);
}
swiper-item{
  background-size: cover;
  background-position: position;
}
.showNum{
  position: absolute;
  bottom: 30rpx;
  right: 20rpx;
  height:31rpx;
background:rgba(0,0,0,0.5);
border-radius:10rpx;
color: #fff;
padding: 0 18rpx;
font-size: 24rpx;
}

.dTitle{
  font-size:32rpx;
font-weight:500;
color:rgba(34,34,34,1);
/* line-height:34rpx; */
margin-bottom: 23rpx;
}

.dDesc{
  font-size:24rpx;
font-weight:400;
color:rgba(102,102,102,1);
/* line-height:34rpx; */
margin-bottom: 40rpx;
}

.dPrice{
  font-size:44rpx;
  font-weight:500;
  color:rgba(250,75,54,1);
  /* line-height:44rpx; */
  margin-bottom: 40rpx;
}

.dPrice view{
  display: inline-block;
  font-size: 36rpx;
  color: #999999;
  text-decoration:line-through;
  margin-left: 10rpx;
}

.grayBlock{
  height:20rpx;
background:rgba(246,246,246,1);
}

.radio{
  width: 40rpx;
  height: 40rpx;
  background-size: contain;
  background-position: center;
  background-repeat: no-repeat;
}

.checkbox checkbox{
  display: none;
}

.headTitle{
  text-align: center;
  font-size:32rpx;
  font-weight:600;
  color:rgba(34,34,34,1);
  line-height:30rpx;
  padding: 46rpx 0 50rpx;
}

.headTitle .line{
  width:5rpx;
  height:22rpx;
  background:rgba(240,155,55,1);
  border-radius:2rpx;
  display: inline-block;
  margin: 0 3rpx;
  vertical-align: middle;
  margin-top: -4rpx;
}

.headTitle .line1{
  height: 15rpx;
}

.empty{
  text-align: center;
  line-height: 200rpx;
}

.position{
  font-size: 24rpx;
  color: #fff;
}

.position image{
  width: 26rpx;
  height: 26rpx;
  vertical-align: middle;
  margin-left: 5rpx;
}

.allLoaded{
  text-align: center;
  padding-bottom: 30rpx;
}